{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "lib": ["ES2024"],
    "target": "es2024",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  }
}
